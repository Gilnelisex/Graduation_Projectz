<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ReviewMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.domain.Review">
            <id property="id" column="ID" jdbcType="INTEGER"/>
            <result property="picture" column="Picture" jdbcType="VARCHAR"/>
            <result property="title" column="Title" jdbcType="VARCHAR"/>
            <result property="content" column="Content" jdbcType="VARCHAR"/>
            <result property="reviewstatus" column="ReviewStatus" jdbcType="INTEGER"/>
            <result property="visitnum" column="VisitNum" jdbcType="INTEGER"/>
            <result property="createtime" column="CreateTime" jdbcType="TIMESTAMP"/>
            <result property="updatetime" column="UpdateTime" jdbcType="TIMESTAMP"/>
            <result property="relationact" column="RelationAct" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        ID,Picture,Title,
        Content,ReviewStatus,VisitNum,
        CreateTime,UpdateTime,RelationAct
    </sql>

    <select id="selectNewReview" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from review
        where ReviewStatus = 1
        order by UpdateTime desc
        limit 5
    </select>

    <select id="selectAllReviews" parameterType="com.example.demo.domain.Review" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from review
        <where>
            <if test="review.title != null and review.title.trim().length()>0">
                <bind name="titlez" value="'%' + review.title + '%'"/>
                and Title like #{titlez}
            </if>
            and ReviewStatus = 1
        </where>
        order by UpdateTime desc
    </select>

    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from review
        where  ID = #{id,jdbcType=INTEGER} 
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from review
        where  ID = #{id,jdbcType=INTEGER} 
    </delete>
    <insert id="insert" keyColumn="ID" keyProperty="id" parameterType="com.example.demo.domain.Review" useGeneratedKeys="true">
        insert into review
        ( ID,Picture,Title
        ,Content,ReviewStatus,VisitNum
        ,CreateTime,UpdateTime,RelationAct
        )
        values (#{id,jdbcType=INTEGER},#{picture,jdbcType=VARCHAR},#{title,jdbcType=VARCHAR}
        ,#{content,jdbcType=VARCHAR},#{reviewstatus,jdbcType=INTEGER},#{visitnum,jdbcType=INTEGER}
        ,#{createtime,jdbcType=TIMESTAMP},#{updatetime,jdbcType=TIMESTAMP},#{relationact,jdbcType=INTEGER}
        )
    </insert>
    <insert id="insertSelective" keyColumn="ID" keyProperty="id" parameterType="com.example.demo.domain.Review" useGeneratedKeys="true">
        insert into review
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">ID,</if>
                <if test="picture != null">Picture,</if>
                <if test="title != null">Title,</if>
                <if test="content != null">Content,</if>
                <if test="reviewstatus != null">ReviewStatus,</if>
                <if test="visitnum != null">VisitNum,</if>
                <if test="createtime != null">CreateTime,</if>
                <if test="updatetime != null">UpdateTime,</if>
                <if test="relationact != null">RelationAct,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id,jdbcType=INTEGER},</if>
                <if test="picture != null">#{picture,jdbcType=VARCHAR},</if>
                <if test="title != null">#{title,jdbcType=VARCHAR},</if>
                <if test="content != null">#{content,jdbcType=VARCHAR},</if>
                <if test="reviewstatus != null">#{reviewstatus,jdbcType=INTEGER},</if>
                <if test="visitnum != null">#{visitnum,jdbcType=INTEGER},</if>
                <if test="createtime != null">#{createtime,jdbcType=TIMESTAMP},</if>
                <if test="updatetime != null">#{updatetime,jdbcType=TIMESTAMP},</if>
                <if test="relationact != null">#{relationact,jdbcType=INTEGER},</if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.example.demo.domain.Review">
        update review
        <set>
                <if test="picture != null">
                    Picture = #{picture,jdbcType=VARCHAR},
                </if>
                <if test="title != null">
                    Title = #{title,jdbcType=VARCHAR},
                </if>
                <if test="content != null">
                    Content = #{content,jdbcType=VARCHAR},
                </if>
                <if test="reviewstatus != null">
                    ReviewStatus = #{reviewstatus,jdbcType=INTEGER},
                </if>
                <if test="visitnum != null">
                    VisitNum = #{visitnum,jdbcType=INTEGER},
                </if>
                <if test="createtime != null">
                    CreateTime = #{createtime,jdbcType=TIMESTAMP},
                </if>
                <if test="updatetime != null">
                    UpdateTime = #{updatetime,jdbcType=TIMESTAMP},
                </if>
                <if test="relationact != null">
                    RelationAct = #{relationact,jdbcType=INTEGER},
                </if>
        </set>
        where   ID = #{id,jdbcType=INTEGER} 
    </update>
    <update id="updateByPrimaryKey" parameterType="com.example.demo.domain.Review">
        update review
        set 
            Picture =  #{picture,jdbcType=VARCHAR},
            Title =  #{title,jdbcType=VARCHAR},
            Content =  #{content,jdbcType=VARCHAR},
            ReviewStatus =  #{reviewstatus,jdbcType=INTEGER},
            VisitNum =  #{visitnum,jdbcType=INTEGER},
            CreateTime =  #{createtime,jdbcType=TIMESTAMP},
            UpdateTime =  #{updatetime,jdbcType=TIMESTAMP},
            RelationAct =  #{relationact,jdbcType=INTEGER}
        where   ID = #{id,jdbcType=INTEGER} 
    </update>

    <update id="updateVisit" parameterType="java.lang.Integer">
        update review
        set VisitNum =(IF(VisitNum is null, 1, VisitNum+1)),
            UpdateTime = UpdateTime
        where ID = #{value}
    </update>
</mapper>
